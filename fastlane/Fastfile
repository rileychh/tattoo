# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :ios do
  desc "Build and sign release IPA"
  lane :build_ipa do
    setup_ci if is_ci

    match(
      type: "development",
      app_identifier: "club.ntut.tattoo",
      git_url: ENV["SIGNING_GIT_URL"],
      readonly: true
    )

    Dir.chdir("..") do
      sh("flutter", "build", "ios", "--release", "--no-codesign")
    end

    build_app(
      workspace: "ios/Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "development",
      export_options: {
        provisioningProfiles: {
          "club.ntut.tattoo" => "match Development club.ntut.tattoo"
        }
      },
      output_directory: "build/ios/ipa",
      output_name: "tattoo.ipa"
    )
  end
end

platform :android do
  # Shared keystore configuration
  def keystore_config
    {
      git_url: ENV["MATCH_KEYSTORE_GIT_URL"],
      package_name: "club.ntut.tattoo",
      match_secret: ENV["MATCH_KEYSTORE_SECRET"]
    }
  end

  desc "Build and sign release APK"
  lane :build_apk do
    Dir.chdir("..") do
      sh("flutter", "build", "apk", "--release", "--split-per-abi")
    end

    # Sign each split APK
    ["armeabi-v7a", "arm64-v8a", "x86_64"].each do |abi|
      match_keystore(
        **keystore_config,
        apk_path: "build/app/outputs/flutter-apk/app-#{abi}-release.apk"
      )
    end
  end

  desc "Build and sign release AAB"
  lane :build_aab do
    Dir.chdir("..") do
      sh("flutter", "build", "appbundle", "--release")
    end

    match_keystore(
      **keystore_config,
      aab_path: "build/app/outputs/bundle/release/app-release.aab"
    )
  end
end
