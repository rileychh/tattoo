{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "mise hook-env -s bash >> \"$CLAUDE_ENV_FILE\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -q '\\.dart$'; then dart format \"$file_path\"; fi; }"
          }
        ]
      }
    ]
  }
}
