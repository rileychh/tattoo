# Git repository URL and branch for Match signing credentials (private repo)
MATCH_GIT_URL=
MATCH_GIT_BRANCH=main

# Basic Authorization header value for accessing the Match Git repository
# Generate with: echo -n your_github_username:your_personal_access_token | base64
MATCH_GIT_BASIC_AUTHORIZATION=

# Password for encrypting/decrypting Match certificates and profiles
# Set during `fastlane match init` or obtain from your team
MATCH_PASSWORD=

# iOS Configuration
# -----------------

# Apple Developer account email
APPLE_ID=

# Apple Developer Team ID (e.g., G582M7KCHL)
APPLE_TEAM_ID=

# App Store Connect API Key (for TestFlight uploads)
# Create at: https://appstoreconnect.apple.com/access/api
# Key ID from App Store Connect (e.g., ABC123XYZ)
APP_STORE_CONNECT_API_KEY_KEY_ID=

# Issuer ID from App Store Connect Keys page (UUID format)
APP_STORE_CONNECT_API_KEY_ISSUER_ID=

# Base64 encoded content of the .p8 file
# Generate with: base64 -i AuthKey_${APP_STORE_CONNECT_API_KEY_KEY_ID}.p8
APP_STORE_CONNECT_API_KEY_KEY=

# Android Configuration
# ---------------------

# Path to Android SDK
ANDROID_HOME=/path/to/android/sdk

# Cloudflare R2 Configuration (for PR build distribution)
# --------------------------------------------------------

# R2 API endpoint URL (format: https://<account-id>.r2.cloudflarestorage.com)
# Find your account ID in R2 dashboard URL or Cloudflare account settings
R2_ENDPOINT_URL=

# R2 API token credentials (create at: Cloudflare Dashboard > R2 > Manage API Tokens)
# Token needs R2 read and write permissions
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=

# R2 bucket name for storing PR build artifacts
R2_BUCKET_NAME=

# Public URL base for R2 bucket (for download links in PR comments)
# Get from: R2 dashboard > Your bucket > Settings > Public access > R2.dev subdomain
# Format: https://pub-<hash>.r2.dev (or custom domain if configured)
R2_PUBLIC_URL=
